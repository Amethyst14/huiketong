.goods{
    width:750rpx;
    margin-top:10rpx;
    background:#fff;
}
/* 头部 */
.goods .title{
    display: flex;
    justify-content: space-between;
    width:690rpx;
    height:107rpx;
    margin:0 auto;
    margin-bottom:20rpx;
    background:#fff;
    border-bottom: 1rpx solid #eee;
}
.goods .title .left{
    display: flex;
    align-items: center;
    height:100%;
}
.goods .title .left .name{
    font-size:32rpx;
    font-weight: bold;
    color:#222;
}
.goods .title .left .scale{
    margin-left:48rpx;
    font-size:24rpx;
    color:#ccc;
}

.goods .title .right{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width:250rpx;
    height:100%;
}
.goods .title .right .img-down{
    width:34.9rpx;
    height:34rpx;
}
.goods .title .right .img-up{
    width:34.9rpx;
    height:34rpx;
}
.goods .title .right .img-del{
    width:36rpx;
    height:40rpx;
}
/* 添加图片按钮 */
.goods .add{
    margin:0 auto;
    width:240rpx;
    height:240rpx;
}
.goods .add .add-btn{
    display: flex;
    justify-content: center;
    align-items: center;
    width:240rpx;
    height:240rpx;
    border:1rpx dashed #b9b9b9;
}
.goods .add .add-btn .add-btn-box{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width:110rpx;
    height:130rpx;
}
.goods .add .add-btn .add-btn-box .addmark{
    font-size:80rpx;
    color:#ccc;
}
.goods .add .add-btn .add-btn-box .scale{
    font-size:24rpx;
    color:#ccc;
}

.goods .add .add-btn text{
    font-size:80rpx;
    color:#ccc;
}
.goods .add image{
    width:100%;
    height:100%;
}
/* 输入区域 */
.goods .input-area{
    width:100%;
    height:400rpx;
}
.goods .input-area .name{
    margin:0 auto;
    width:660rpx;
    height:105rpx;
    border-bottom:1px solid #eee;
}
.goods .input-area .name input{
    width:100%;
    height:100%;
    font-weight: 600;
    font-size:32rpx;
    color:#282828;
}
.goods .input-area .content{
    margin:0 auto;
    width:660rpx;
    height:270rpx;
    margin-top:20rpx;
}
.goods .input-area .content textarea{
    width:100%;
    height:100%;
    font-size:28rpx;
    color:#282828;
}