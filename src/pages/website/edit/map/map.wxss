.map{
    width:750rpx;
    margin-top:10rpx;
    background:#fff;
}
.map .toggle{
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin:0 auto;
    width:690rpx;
    height:109rpx;
    border-bottom:1rpx solid #eee;
}
.map .toggle .word{
    font-weight: 600;
    font-size:32rpx;
    color:#222;
}

/* 头部 */
.map .title{
    display: flex;
    justify-content: space-between;
    width:690rpx;
    height:107rpx;
    margin:0 auto;
    margin-bottom:20rpx;
    background:#fff;
    border-bottom: 1rpx solid #eee;
}
.map .title .left{
    display: flex;
    align-items: center;
    height:100%;
}
.map .title .left .name{
    font-size:32rpx;
    font-weight: bold;
    color:#222;
}
.map .title .left .scale{
    margin-left:48rpx;
    font-size:24rpx;
    color:#ccc;
}

.map .title .right{
    display: flex;
    justify-content: space-between;
    align-items: center;
    width:250rpx;
    height:100%;
}
.map .title .right .img-down{
    width:34.9rpx;
    height:34rpx;
}
.map .title .right .img-up{
    width:34.9rpx;
    height:34rpx;
}
.map .title .right .img-del{
    width:36rpx;
    height:40rpx;
}